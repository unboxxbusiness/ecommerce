
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/customers/$(request.auth.uid)).data.role == 'admin';
    }

    // Products can be read by anyone, but only written by admins.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Customers collection
    match /customers/{userId} {
      // A user can create their own customer document.
      allow create: if request.auth.uid == userId;
      // A user can read or update their own document. Admins can read any.
      allow read, update: if request.auth.uid == userId || isAdmin();
      // Only admins can delete customers.
      allow delete: if isAdmin();
    }
    
    // Orders collection
    match /orders/{orderId} {
        // Users can create their own orders.
      allow create: if request.auth.uid != null && request.resource.data.customerEmail == request.auth.token.email;
        // Users can only read their own orders. Admins can read any order.
      allow read: if (request.auth.uid != null && get(/databases/$(database)/documents/orders/$(orderId)).data.customerEmail == request.auth.token.email) || isAdmin();
        // Admins can update order status.
      allow update: if isAdmin();
        // No one can delete orders for data integrity.
      allow delete: if false;
    }
  }
}
