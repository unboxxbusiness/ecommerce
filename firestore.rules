
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is an admin.
    // It verifies the user's email from their auth token.
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "your-admin-email@example.com";
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /orders/{orderId} {
      allow read, write: if request.auth.uid == resource.data.userId || isAdmin();
      allow create: if request.auth.uid != null;
    }

    match /customers/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid != null;
    }

    match /coupons/{couponId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /siteContent/{docId} {
      allow read: if true;
      // Deny all client-side writes. Only the trusted server (via admin SDK) can write.
      allow write: if false; 
    }
  }
}
