
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user is an admin
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // PUBLIC collections can be read by anyone, but only written by admins
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /siteContent/{docId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /pages/{pageId} {
        allow read: if resource.data.isPublished == true;
        allow write: if isAdmin();
    }

    match /coupons/{couponId} {
        // Only allow reading of active coupons
        allow read: if resource.data.isActive == true;
        allow write: if isAdmin();
    }
    
    // CUSTOMER data can only be read/written by the customer themselves or an admin
    match /customers/{userId} {
      allow read, update: if request.auth.uid == userId || isAdmin();
      // Allow creation for any authenticated user (signup)
      allow create: if request.auth != null;
      allow delete: if isAdmin();
    }

    // ORDERS can be read by the customer or an admin, but only created by the customer
    match /orders/{orderId} {
        allow read, update: if request.auth.uid == resource.data.customerEmail || isAdmin(); // Note: This assumes email is used for lookup, safer to use UID.
        allow create: if request.auth != null;
        allow delete: if isAdmin();
    }

    // ADMINS collection can only be read/written by other admins
    match /admins/{adminId} {
      allow read, write: if isAdmin();
    }
  }
}
